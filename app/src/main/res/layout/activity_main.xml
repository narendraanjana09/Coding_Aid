<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sign_in_background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/codetxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/cloud_message_text"
        android:padding="10dp"
        android:text="Glad To See You Helper!ðŸ¤—"
        android:textAlignment="center"
        android:textColor="@color/whiteextra"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/codetxt2"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/codetxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:padding="10dp"
        android:background="@drawable/cloud_message_text"
        android:text="Connect to the server thus \nsomeone can see youðŸ‘‡"
        android:textAlignment="center"
        android:textColor="@color/whiteextra"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/connectbtn"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/codetxt1" />

    <Button
        android:id="@+id/connectbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/google_round_btn"
        android:onClick="connect"
        android:text="Connect"
        android:textAllCaps="false"
        android:textColor="@color/whiteextra"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editFields"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codetxt2" />

    <Button
        android:id="@+id/editFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/google_round_btn"
        android:onClick="editFields"
        android:padding="5dp"
        android:text="Edit Your Fields"
        android:textAllCaps="false"
        android:textColor="@color/whiteextra"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectbtn" />


</androidx.constraintlayout.widget.ConstraintLayout>